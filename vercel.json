
{
  "images": {
    "sizes": [140, 160, 400, 500, 600, 800],
    "domains": ["lovable-uploads.vercel.app", "owtufhdsuuyrgmxytclj.supabase.co"],
    "formats": ["image/webp"],
    "minimumCacheTTL": 60,
    "dangerouslyAllowSVG": true,
    "contentSecurityPolicy": "default-src 'self'; script-src 'none'; sandbox;"
  },
  "rewrites": [
    { "source": "/static/:path*", "destination": "/static/:path*" },
    { "source": "/lovable-uploads/:path*", "destination": "/lovable-uploads/:path*" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/_vercel/image/:path*", "destination": "/_vercel/image/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/:path*\\.(jpg|jpeg|png|webp|avif|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
