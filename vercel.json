
{
  "images": {
    "sizes": [304, 760],
    "domains": ["soundraiser.io"],
    "formats": ["image/webp"],
    "minimumCacheTTL": 31536000,
    "dangerouslyAllowSVG": true,
    "contentSecurityPolicy": "default-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
  },
  "rewrites": [
    {
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(facebook|twitter|linkedin|pinterest|whatsapp|telegram|discord|bot|crawl|spider|google|bing|yahoo|facebookexternalhit|facebot|instapaper|flipboard|tumblr|slackbot|skype|snapchat|pinterest|yandex)"
        }
      ],
      "source": "/link/:slug*",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/render-smart-link/:slug*"
    },
    {
      "source": "/social-api/link/:slug*",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/render-smart-link/:slug*"
    },
    {
      "source": "/og/:slug*",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/render-smart-link/:slug*"
    },
    {
      "source": "/link/:slug*/seo",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/render-smart-link/:slug*"
    },
    {
      "source": "/direct-link/:slug*",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/render-smart-link/:slug*"
    },
    {
      "source": "/_next/image",
      "destination": "/_next/image"
    },
    {
      "source": "/lovable-uploads/:path*",
      "destination": "/_next/image?url=/lovable-uploads/:path*&w=760&q=75"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/simplified-sitemap"
    },
    {
      "source": "/sitemap-:file.xml",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/simplified-sitemap/sitemap-:file.xml"
    },
    {
      "source": "/api/sitemap",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/simplified-sitemap"
    },
    {
      "source": "/api/sitemap/:file",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/simplified-sitemap/:file"
    },
    {
      "source": "/api/payments/create-promotion-checkout",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/create-checkout-session"
    },
    {
      "source": "/api/spotify/search",
      "destination": "https://owtufhdsuuyrgmxytclj.supabase.co/functions/v1/spotify-search"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/:path*\\.(jpg|jpeg|png|webp|avif|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        },
        {
          "key": "Content-Type",
          "value": "application/xml; charset=UTF-8"
        }
      ]
    },
    {
      "source": "/sitemap-:file.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        },
        {
          "key": "Content-Type",
          "value": "application/xml; charset=UTF-8"
        }
      ]
    },
    {
      "source": "/direct-link/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/link/:slug*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/social-api/link/:slug*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        },
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/og/:slug*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        },
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/link/:slug*/seo",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        },
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm ci",
        "buildCommand": "npm run build"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
