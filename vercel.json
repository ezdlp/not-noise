
{
  "images": {
    "sizes": [304, 760],
    "domains": ["soundraiser.io"],
    "formats": ["image/webp"],
    "minimumCacheTTL": 31536000,
    "dangerouslyAllowSVG": true,
    "contentSecurityPolicy": "default-src 'self'; script-src 'none'; sandbox;"
  },
  "rewrites": [
    {
      "source": "/_next/image",
      "destination": "/_next/image"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://owtufhdsuuyrgmxytclj.functions.supabase.co/sitemap"
    },
    {
      "source": "/sitemap-:segment.xml",
      "destination": "https://owtufhdsuuyrgmxytclj.functions.supabase.co/sitemap?segment=:segment"
    },
    {
      "source": "/lovable-uploads/:path*",
      "destination": "/_next/image?url=/lovable-uploads/:path*&w=760&q=75"
    }
  ],
  "headers": [
    {
      "source": "/:path*\\.(jpg|jpeg|png|webp|avif|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/sitemap(:?-[0-9]+)?\\.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        },
        {
          "key": "Content-Type",
          "value": "application/xml; charset=UTF-8"
        },
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    }
  ]
}
